<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |msg| %>
    <p><%= msg %></p>
  
  <% end %>
<% end %>

<div class="wide-form">
  <%= form_for(@user) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br />
    
    <%= f.label :email %>
    <%= f.text_field :email %>
    <br />
    
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br />
    
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
    <br />
    
    <%= f.submit "Create Account", class: "sub-form" %>
  
  <% end %>
  
  <p class="sign-in-up-link">Already registered?  <%= link_to "Log in here", login_path %></p>
</div>