<h1>Sign in to your account</h1>

<div class="wide-form">
  <%= form_for(:session, url: login_path) do |f| %>
    <%= f.label :email %>
    <%= f.text_field :email, value: "sample@sample.com" %>
    <br />
    <%= f.label :password %>
    <%= f.password_field :password, value: "password" %>
    <br />
    <%= f.submit "Log in", class: "sub-form" %>
  <% end %>
  
  <p class="sign-in-up-link">New user? <%= link_to "Sign up here", users_new_path %></p>
</div>

