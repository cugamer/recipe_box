<div class="recipe-info rec-show-pod">
  <div>
    <h2 class="recipe-title"><%= @recipe.title  %></h2>
  </div>
  <div class= "recipe-desc">
    <%= simple_format @recipe.description %>
  </div>
</div>
  
<%= image_tag @recipe.photo.url(:medium), class: "recipe-pic" %>

<div class="rec-sub-sec dir-sub-sec rec-show-pod">
  <h3 class="sub-category">Directions</h3>
  <% if @recipe.directions.any? %>
    <% @recipe.directions.all.each do |direction| %>
      <ul>
        <li><%= direction.direction %></li>
      </ul>
    <% end %>
  <% end %>
</div>

<div class="rec-sub-sec ing-sub-sec rec-show-pod">
  <h3 class="sub-category">Ingredients</h3>
  <% if @recipe.ingredients.any? %>
    <% @recipe.ingredients.all.each do |ingredient| %>
      <ul>
        <li><%= ingredient.ingredient %></li>
      </ul>
    <% end %>
  <% end %>
</div>

<% if logged_in? and current_user.id == @recipe.user_id %>
  <%= link_to "Delete recipe", recipe_path, method: :delete,
          data: { confirm: "Are you sure you want to delete this recipe?" },
          class: "delete-button btn btn-danger"%>
          
  <%= link_to "Edit recipe", edit_recipe_path, class: "edit-button btn btn-warning" %>
<% end %>