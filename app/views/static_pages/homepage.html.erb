<div class="center jumbotron">
  <h1>Recipe Box</h1>
</div>

<% if logged_in? %>
  <h3>Welcome <%= @current_user.name %></h3>
  <%= link_to 'Create a new recipe', new_recipe_path %>
  <%= render 'recipe_display' %>
<% else %>
  <h2>New here? <%= link_to "Sign up", new_user_path %> or <%= link_to "sign in", login_path %>.</h2>
<% end %>